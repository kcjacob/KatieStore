@model KatieStore.Models.Purchase
@{
    ViewBag.Title = "Index";
}

<h2>@Model.OrderIdentifier</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.PurchaseProducts.Count(); i++)
        {
            <tr>
                <td></td>
                <td>@Model.PurchaseProducts.ElementAt(i).Product.Name</td>
                <td>@Model.PurchaseProducts.ElementAt(i).Product.Description</td>
                <td>@((Model.PurchaseProducts.ElementAt(i).Product.Price ?? 0).ToString("c"))</td>
                <td>
                    @Model.PurchaseProducts.ElementAt(i).Quantity
                </td>

                <td>
                    @(((Model.PurchaseProducts.ElementAt(i).Product.Price ?? 0) * Model.PurchaseProducts.ElementAt(i).Quantity).ToString("c"))
                </td>

            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5">Total</td>
            <td>@Model.PurchaseProducts.Sum(x => (x.Product.Price ?? 0) * x.Quantity).ToString("c")</td>
        </tr>
    </tfoot>
</table>