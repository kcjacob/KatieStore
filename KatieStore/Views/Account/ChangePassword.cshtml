@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
        <div class="well">
            <h2>Change Password</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (string error in (IEnumerable<string>)ViewBag.Error)
                            {
                                <li>@error</li>
                            }
                        </ul>

                    </div>
                }
                <div class="form-group">
                    <label for="currentPassword" class="control-label">Current Password</label>
                    <input name="currentPassword" placeholder="current password" type="password" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="newPassword" class="control-label">New Password</label>
                    <input name="newPassword" placeholder="new password" type="password" class="form-control" required />
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <input type="submit" class="btn btn-primary" value="Change Password" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>